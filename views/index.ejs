<body>
<div class="container" id="container" >
	<div class="form-container sign-up-container">
		<form action="/users" method="post">
			<h1>Create Account</h1>
			<input type="text" id="first_name" name="first_name" placeholder="Name" required=true />
			<input type="text" id="username" name="username" placeholder="Userame" required=true />
			<input type="email" id="email" name="email" placeholder="Email" required=true />
			<input type="password" id="password" name="password" placeholder="Password" required=true />
			<div class="remember">
				<input type="radio" id="male" name="gender" value="male" required="required" ><label for="male">Male</label>
  				<input type="radio" id="female" name="gender" value="female" required="required" ><label for="female">Female</label>
			</div>
			<button type="submit">Sign Up</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form action="/signin" method="post">
			<h1>Sign in</h1>
			<input type="email" id="email" name="email" placeholder="Email" required=true />
			<input type="password" id="password" name="password" placeholder="Password" required=true />
			<!-- <div class="remember">
				<input type="checkbox" tabindex="3" class="" name="remember" id="remember">
				<label for="remember">Remember Me</label>
			</div> -->
			<a onclick="forgotPassword()">Forgot your password?</a>
			<button>Sign In</button>
		</form>
	</div>

	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>By logging in you agree to the ridiculously long terms that you didn't bother to read</p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with us</p>
				<button class="ghost" id="signUp">Sign Up</button>
			</div>
		</div>
	</div>
</div>
<p id="wrong"><%= wrong %></p>
<p id="email-validation"><%= name %><a  href="http://localhost:3030"><b><%= cross %></b></a></p>

